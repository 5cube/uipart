{
  "version": "0.1.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "conventionalCommits": true,
      "yes": true
    },
    "version": {
      "message": "chore(release): publish %s"
    }
  }
}
